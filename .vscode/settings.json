{
  "editor.formatOnPaste": true,
  "editor.detectIndentation": true,
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript", {
      "language": "vue",
      "autoFix": true
    },
    "html",
    "vue"
  ],
  "eslint.options": {
    "extensions": [
      ".js",
      ".jsx",
      ".vue"
    ]
  }
}
